{% extends 'base.html.twig' %}

{% block title %}Détails du Livre : {{ book.title }}{% endblock %}

{% block body %}
    <div class="book-show">
        <h1 class="text-center">Détails du Livre</h1>

        <div class="container">
            <!-- Centrage du tableau -->
            <table class="table table-striped table-bordered mx-auto">
                <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ book.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ book.title }}</td>
                </tr>
                <tr>
                    <th scope="row">Genre</th>
                    <td>{{ book.genre }}</td>
                </tr>
                <tr>
                    <th scope="row">Date de Publication</th>
                    <td>{{ book.publishedAt ? book.publishedAt|date('d/m/Y') : 'Non spécifiée' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <!-- Centrage des boutons -->
        <div class="text-center mt-4">
            <a href="{{ path('app_book_index') }}" class="btn btn-secondary">Retour à la liste</a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('book/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
            {% endif %}
        </div>
    </div>
{% endblock %}

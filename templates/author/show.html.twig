{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>l'auteure - L'auteur</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Prénom</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>Biographie</th>
                <td>{{ author.bio }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-4">
    <a href="{{ path('app_author_index') }}" class="btn btn-secondary">Retour à la liste</a>
        {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-primary">Modifier</a>
    {{ include('author/_delete_form.html.twig', { 'class': 'btn btn-danger' }) }}
        {% endif %}


    </div>






{% endblock %}

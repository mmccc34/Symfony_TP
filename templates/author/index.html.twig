{% extends 'base.html.twig' %}

{% block title %}Author index{% endblock %}

{% block body %}
    <h1 class="mb-4">Gestion des auteurs</h1>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Bio</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.firstName }}</td>
                <td>{{ author.lastName }}</td>
                <td>{{ author.bio }}</td>
                <td>
                    <a href="{{ path('app_author_show', {'id': author.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                    <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="text-center mt-3">
    <a href="{{ path('app_author_new') }}" class="btn btn-success">Cr√©er un nouvel auteur</a>
</div>
{% endblock %}

